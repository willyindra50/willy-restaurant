{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    /* Pakai node-style resolution, bukan bundler */
    "moduleResolution": "node",

    /* Jangan auto-include type defs dari dep */
    "types": ["node"],

    "noEmit": true,
    "strict": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
